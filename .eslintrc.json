{
  "extends": ["eslint:recommended"],
  "plugins": ["node"],
  "env": {
        "es6": true,
        "node": true
    },
  "rules": {
    "node/exports-style": "error",           //`module.exports`と`exports.*`を混ぜて使うと警告
    "node/no-deprecated-api": "error",       //Node.jsの非推奨APIを使用すると警告
    "node/no-missing-require": "error",      //`require()`で存在しないファイルを読もうとすると警告
    "node/no-unpublished-bin": "error",      //CLIのエントリポイントが無視リストに入っていた場合に警告
    "node/no-unpublished-require": "error",  //`require()`で公開後に読めなくなるモジュールを読もうとすると警告
    "node/no-unsupported-features": "error", //指定したNode.jsのバージョンでサポートされていない構文を使おうとすると警告
    "node/process-exit-as-throw": "error",   //`process.exit()`の実行パスを修正
    "node/shebang": "error"                  //シバンの誤りを指摘/
  }
}
